<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Photo</dt>
      <dd><img src="<%= @photo.photo %>" class="img-responsive"></dd>

      <dt>Shop</dt>
      <dd>
        <% if @photo.shop.present? %>
          <a href="/shops/<%= @photo.shop_id %>">
            <%= @photo.shop.name %>
          </a>
        <% end %>
      </dd>

      <dt>Review</dt>
      <dd>
        <% if @photo.review.present? %>
          <a href="/reviews/<%= @photo.review_id %>">
            <%= @photo.review.review %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
