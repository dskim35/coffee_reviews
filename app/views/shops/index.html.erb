<div class="page-header">
  <h1>
    Shops
    <a href="/shops/new" class="btn btn-lg btn-success">New Shop</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Hours</th>
        <th>Actions</th>
      </tr>

      <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.hours %></td>
        <td>
          <a href="/shops/<%= shop.id %>" class="btn btn-primary">Show</a>
          <a href="/shops/<%= shop.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shop/<%= shop.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
