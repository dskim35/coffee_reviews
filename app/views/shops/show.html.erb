<div class="page-header">
  <h3>Shop #<%= @shop.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @shop.name %></dd>

      <dt>Address</dt>
      <dd><%= @shop.address %></dd>

      <dt>Hours</dt>
      <dd><%= @shop.hours %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/shops" class="btn btn-primary">
        Back
      </a>
      <a href="/shops/<%= @shop.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_shop/<%= @shop.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
